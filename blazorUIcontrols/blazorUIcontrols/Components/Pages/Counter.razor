@page "/counter"
@rendermode InteractiveServer


<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<br/>
<br />

<MyButton  OnClick="IncrementCount" class="btn btn-success"  />


<div class="mt-3">

<input @oninput="OnInput" type="type" name="name" value="" />


</div>
 <div class="mt-3">

<label >@text</label>
</div>

 
@code {
    private int currentCount = 0;
    string text = "";

    private void IncrementCount() => currentCount += 4;
    private void OnChange(ChangeEventArgs e) => text = (string)e.Value!;
    private void OnInput(ChangeEventArgs e) => text = (string)e.Value!;
}
